<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RIAYA</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/RIAYA.styles.css" asp-append-version="true" /> *@
    <link rel="icon" href="~/images/Logo-removebg2.png" type="image/x-icon" asp-append-version="true">
    <link rel='stylesheet' type='text/css' media='screen' href='~/css/navbar.css' asp-append-version="true">
    <link rel='stylesheet' type='text/css' media='screen' href='~/css/footer.css' asp-append-version="true">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel='stylesheet' type='text/css' media='screen' href='~/css/scrllbar.css' asp-append-version="true">
    <link rel='stylesheet' type='text/css' media='screen' href='~/css/index.css' asp-append-version="true">
    <link rel='stylesheet' type='text/css' media='screen' href='~/css/about.css' asp-append-version="true">
    <link rel='stylesheet' type='text/css' media='screen' href='~/css/contact.css' asp-append-version="true">
    <link rel='stylesheet' type='text/css' media='screen' href='~/css/log_in.css' asp-append-version="true">
    <link rel='stylesheet' type='text/css' media='screen' href='~/css/sing_up.css' asp-append-version="true">
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="logo">
                <img src="~/images/Logo-removebg.png" alt="Logo">
            </div>

            <ul class="nav-links">
                <li><a class="nav-link text-dark active" asp-area="" asp-controller="Home" asp-action="Index" >Home</a></li>
                <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="">Services</a></li>
                <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="">Store</a></li>
                <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="">Knowledge Capsule</a></li>
                <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="">Digital Health Advisor</a></li>
                <!-- <li><a href="./q&a.html">Q&A</a></li> -->
                <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="about" >About Us</a></li>
                <li class="dropdown">
                    <a class="dropdown-t" href="#">Help & Contact <i class="fa-solid fa-chevron-down"></i></a>
                    <ul class="dropdown-menu">
                        <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact">Contact Us</a></li>
                        <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="">Join Us</a></li>
                    </ul>
                </li>

                <li class="sign-up-mobile">
                    <form asp-controller="Authentication" asp-action="Sign_up" method="get">
                        <button type="submit" class="sign-up">Sign up</button>
                    </form>
                </li>
            </ul>
            <div class="nav-icons">
                <button class="hamburger-menu" onclick="toggleMenu()">
                    ☰
                </button>
                <a href="cart.html" class="cart-icon">
                    <img src="~/images/shopping-cart.png" alt="Shopping Cart">
                </a>
                <div class="emergency-button">
                    <a href="emergency.html" class="btn-emergency">
                        <img src="~/images/siren.png" alt="Emergency Icon">
                    </a>
                </div>
                <form asp-controller="Authentication" asp-action="Sign_up" method="get">
                    <button type="submit" class="sign-up">Sign up</button>
                </form>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="footer-container">
            <!-- Logo and Description Section -->
            <div class="footer-logo">
                <img src="~/images/logo2-removebg.png" alt="Riaya Logo">
                <p>We provide seamless access to trusted home healthcare services, tailored to your needs.</p>
                <p class="copyrights">© 2024 RIAYA. All rights reserved.</p>
            </div>

            <!-- Our Services Section -->
            <div class="footer-services">
                <h4>Our Services</h4>
                <ul>
                    <li>Home Healthcare</li>
                    <li>Medical Consultations</li>
                    <li>Rapid Emergency Response</li>
                    <li>Smart Health Assistance</li>
                    <li>Medical Supplies Store</li>
                    <li>Knowledge Capsule</li>
                </ul>
            </div>

            <!-- Links Section -->
            <div class="footer-links">
                <h4>Links</h4>
                <ul>
                    <li><a href="#">Home</a></li>
                    <li><a href="#">Services</a></li>
                    <li><a href="#">Store</a></li>
                    <li><a href="#">Knowledge Capsule</a></li>
                    <li><a href="#">Digital Health Advisor</a></li>
                    <li><a href="#">About Us</a></li>
                    <li><a href="#">Contact Us</a></li>
                </ul>
            </div>

            <!-- Quick Contacts Section -->
            <div class="footer-contacts">
                <h4>Quick Contacts</h4>
                <p>Looking for assistance? We're here to help 24/7!</p>
                <ul>
                    <li><i class="fa-solid fa-phone"></i> +962 7 7777 7777</li>
                    <li><i class="fa-solid fa-envelope"></i> support@riaya.com</li>
                    <li><i class="fa-solid fa-location-dot"></i> 123 Healthcare Street, Amman, Jordan</li>
                </ul>
                <i class="fa-solid fa-arrow-right"></i><a href="https://maps.app.goo.gl/jADwFoopJgs5NyiL9" target="_blank"
                                                          class="get-directions">Get Directions</a>
                <div class="social-icons">
                    <div class="Ellipse"><a href="#"><img src="~/images/facebook-app-symbol.png" alt="Facebook"></a></div>
                    <div class="Ellipse"><a href="#"><img src="~/images/instagram.png" alt="Instagram"></a></div>
                    <div class="Ellipse"><a href="#"><img src="~/images/twitter.png" alt="Twitter"></a></div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src='~/js/navbar.js' asp-append-version="true"></script>
    <script src='~/js/index.js' asp-append-version="true"></script>
    <script src='~/js/home_visit_services_details.js' asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
